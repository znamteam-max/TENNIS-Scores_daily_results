{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "trailingSlash": false,

  "functions": {
    "api/**/*.py": { "runtime": "python3.12" }
  },

  "routes": [
    { "src": "^/api/hello$",         "dest": "/api/hello.py" },
    { "src": "^/api/hello/$",        "dest": "/api/hello.py" },
    { "src": "^/api/hello/(.*)$",    "dest": "/api/hello.py" },

    { "src": "^/api/webhook$",       "dest": "/api/webhook.py" },
    { "src": "^/api/webhook/$",      "dest": "/api/webhook.py" },
    { "src": "^/api/webhook/(.*)$",  "dest": "/api/webhook.py" },

    { "src": "^/api/dbcheck$",       "dest": "/api/dbcheck.py" },
    { "src": "^/api/dbcheck/$",      "dest": "/api/dbcheck.py" },
    { "src": "^/api/dbcheck/(.*)$",  "dest": "/api/dbcheck.py" }
  ]
}
